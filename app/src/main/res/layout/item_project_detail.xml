<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivProjectIcon"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvProjectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textColor="@color/black"
            tools:text="微信小程序蓝牙调试工具，想学习小程序蓝牙操作，只需一个demo，即可轻松入门"
           />

        <TextView
            android:id="@+id/tvProjectDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProjectTitle"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color444A59"
            android:textSize="14sp"
            tools:text="微信小程序蓝牙调试工具是个人在做小程序蓝牙项目时开发的，目的是方便后续的蓝牙协议调试~"/>

        <TextView
            android:id="@+id/tvProjectAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color444A59"
            android:textSize="14sp"
            tools:text="dsda"/>

        <TextView
            android:id="@+id/tvProjectNiceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color444A59"
            android:textSize="12sp"
            tools:text="刚刚"/>

    </RelativeLayout>

</LinearLayout>