<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFloat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/ic_float_open"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/color444A59"
            android:text="浮窗"/>

        <TextView
            android:id="@+id/tvBrowser"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/ic_browser"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/color444A59"
            android:text="在浏览器打开"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRefresh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/ic_refresh"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/color444A59"
            android:text="刷新"/>

        <TextView
            android:id="@+id/tvLink"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/ic_link"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/color444A59"
            android:text="复制链接"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFavorite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/ic_favorite_empty"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/color444A59"
            android:text="收藏"/>

        <TextView
            android:id="@+id/tvShare"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/ic_share"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/color444A59"
            android:text="分享"/>

    </LinearLayout>



</LinearLayout>